@model IEnumerable<Shopping_Appilication.Models.Bill>
<h2>Đã thanh toán</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Mã HD
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Tổng tiền
            </th>
            <th>
                Trạng thái
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaHD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToTalPrice)
                    </td>
                    @if (item.Status == 1)
                    {
                        <td>
                            Đã thanh toán
                        </td>
                    }
                    else{
                        <td>
                            Chưa thanh toán
                        </td>
                    }
                </tr>
            }
        }
        else
        {
            <p>No bills found.</p>
        }
    </tbody>
</table>
